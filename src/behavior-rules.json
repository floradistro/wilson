{
  "version": "1.0.1",
  "lastUpdated": "2026-01-19T00:17:42.292Z",
  "rules": {
    "cliFormatting": {
      "maxLines": 10,
      "maxBulletPoints": 5,
      "useTablesFor": [
        "comparisons",
        "metrics",
        "status"
      ],
      "statusFirst": true,
      "avoidMarkdown": [
        "**",
        "###",
        "emoji"
      ],
      "preferFormat": "Status: SUCCESS\n\nSummary:\n- Key info\n- Concise points"
    },
    "responsePatterns": {
      "avoid": [
        "long bullet lists",
        "verbose explanations",
        "markdown formatting",
        "interactive charts mentions"
      ],
      "prefer": [
        "status summaries",
        "data tables",
        "concise metrics",
        "plain text only"
      ],
      "triggers": {
        "selfCorrect": [
          "format violation",
          "length violation",
          "cli incompatible"
        ],
        "validate": true
      },
      "templates": {
        "gitPush": "Git Status: PUSHED\n\nSummary:\n- Files: {count}\n- Commit: {message}\n- Status: Success"
      }
    },
    "selfCorrection": {
      "enabled": true,
      "preResponseCheck": true,
      "autoFix": [
        "removeMarkdown",
        "convertBulletsToTable",
        "limitLength",
        "addStatusSummary"
      ],
      "learningMode": true
    },
    "qualityMetrics": {
      "trackResponses": true,
      "scoreThresholds": {
        "excellent": 95,
        "good": 80,
        "needsWork": 60
      },
      "improvementTargets": [
        "cli_formatting",
        "response_length",
        "clarity",
        "structure"
      ]
    }
  }
}